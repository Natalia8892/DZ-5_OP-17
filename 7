function range(start, end, step) {
    var array = []
    step === undefined ? step = 1 : step
    if (step > 0) {
        for (i = start; i <= end; i += step) {
            array.push(i)
        }
        } else {
        for (i = start; i >= end; i += step) {
            array.push(i)
        }
    }
    return array
}


sum = function(array){
  var sum = 0;
  for (i = 0; i<=array.length; i++)
    sum +=i
  return sum
}


console.log(range(5,2,-1));
