function countBs (string) {       
	var total=0
	for (i=0; i<string.length; i++) {
		if (string.charAt(i)==="B") {
			total+=1
		}
}console.log(total)
}

countBs(prompt("Vvedite sroku"))



function countChar (string,search) {
	var total=0
	for (i=0; i<string.length; i++) {
		if (string.charAt(i)===search) {
			total+=1
		}
}console.log(total)
}

countChar(prompt("Vvedite sroku"),"B")
